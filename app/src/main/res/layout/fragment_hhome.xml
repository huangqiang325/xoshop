<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearlayout_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:orientation="vertical"
        >
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/mainColor"
        >
        <ImageButton
            android:id="@+id/imagebtn_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:background="@null"
            android:src="@mipmap/classify"
            />
        <RelativeLayout
            android:id="@+id/relative_search"
            android:layout_toRightOf="@+id/imagebtn_person"
            android:layout_toLeftOf="@+id/imagebtn_qiandao"
            android:layout_width="match_parent"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="11dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_background_14_maincolor"
            >
            <ImageButton
                android:id="@+id/imagebtn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:background="@null"
                android:src="@mipmap/sousuo"
                />
            <TextView
                android:id="@+id/textview"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imagebtn_search"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:text="搜索您想要的商品"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageButton
            android:id="@+id/imagebtn_qiandao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:src="@mipmap/qiandao"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlDragRate="0.7"
        android:background="#f5f5f5"
        app:srlEnablePreviewInEditMode="true"
        app:srlHeaderMaxDragRate="1.3"
        app:srlHeaderTriggerRate="0.5"
        app:srlAccentColor="@color/square"
        app:srlPrimaryColor="@color/refresh_back">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="FixedBehind"
            app:srlDrawableArrowSize="20dp"
            app:srlDrawableMarginRight="20dp"
            app:srlDrawableProgressSize="20dp"
            app:srlEnableLastTime="true"
            app:srlFinishDuration="500"
            app:srlTextSizeTime="10dp"
            app:srlTextSizeTitle="16sp"
            app:srlTextTimeMarginTop="2dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="157dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:background="@mipmap/kapianbeijing"
                    android:layout_height="121dp" />
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:orientation="vertical"
                    app:image_scale_type="fit_xy"
                    app:indicator_drawable_selected="@color/mainColor"
                    app:indicator_drawable_unselected="@color/color_white_66ffffff"
                    ></com.youth.banner.Banner>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="4"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:layout_height="61dp">
                <LinearLayout
                    android:id="@+id/ll_latest"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:src="@mipmap/zuixinshangpin"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="最新商品"
                            android:textColor="#ff605d57"
                            android:layout_alignParentBottom="true"
                            android:textSize="12sp"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_hotest"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:src="@mipmap/renqizuiwang"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人气最旺"
                            android:textColor="#ff605d57"
                            android:layout_alignParentBottom="true"
                            android:textSize="12sp"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_introduction"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:src="@mipmap/shagnchengjieshao"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商城介绍"
                            android:textColor="#ff605d57"
                            android:layout_alignParentBottom="true"
                            android:textSize="12sp"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_join"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:src="@mipmap/jiaruccm"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="加入CCM"
                            android:textColor="#ff605d57"
                            android:layout_alignParentBottom="true"
                            android:textSize="12sp"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="375dp"
                android:layout_height="9dp"
                android:background="#fff4f2ef"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f5f5f5"
                    android:clipToPadding="false"
                    tools:listitem="@android:layout/simple_list_item_2" />

                <LinearLayout
                    android:id="@+id/linearlayout_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/none_leida" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/square"
            app:srlClassicsSpinnerStyle="Translate"
            app:srlDrawableProgress="@drawable/ic_progress_hojder"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>