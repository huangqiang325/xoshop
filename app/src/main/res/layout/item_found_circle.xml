<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF">

    <com.xoshop.widget.CircleImageView
        android:id="@+id/headimage_imag_circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp">
        <TextView
            android:id="@+id/found_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF34312C"
            android:text="Cool Chein"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/found_creat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF979696"
            android:text="2018-08-28 10:35:12"
            android:textSize="12dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/desc_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF34312C"
            android:text="日常必备护肤品，水乳面膜应有尽"
            android:textSize="14dp"
            android:layout_marginTop="8dp"
            android:singleLine="false"/>
        
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:id="@+id/only_one_pic_imag"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <RelativeLayout
                android:id="@+id/dianzan_rellayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/dianzan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/dianzan"/>
                <TextView
                    android:id="@+id/found_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_toRightOf="@+id/dianzan"
                    android:layout_marginLeft="8dp"
                    android:textColor="#FF605D5C"
                    android:textSize="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pinglun_rellayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="3dp">
                <ImageView
                    android:id="@+id/pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pinglun"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/found_commment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_toRightOf="@+id/pinglun"
                    android:layout_marginLeft="8dp"
                    android:textColor="#FF605D5C"
                    android:textSize="12dp"/>
            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/found_commment_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_shape"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
</LinearLayout>
