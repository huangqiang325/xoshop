<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    android:orientation="vertical">
    <!-- 根据template文件的parameter属性判断是否需要添加 -->
    <LinearLayout
        android:id="@+id/linearlayout_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_mid"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:background="@null"
            android:src="@drawable/logo"
            />
        <LinearLayout
            android:id="@+id/ll_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/login_edit_margin_hon"
                android:layout_height="@dimen/login_edit_height"
                android:background="@drawable/shape_background_logorreg"
                >
                <EditText
                    android:id="@+id/edit_tel"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@+id/textview_yzm_reg"
                    android:layout_height="wrap_content"
                    android:hint="请输入手机号"
                    android:textColorHint="#8395A7"
                    android:layout_marginLeft="16sp"
                    android:inputType="phone"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    />
                <TextView
                    android:id="@+id/textview_yzm_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#529ECD"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:text="获取验证码"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/login_edit_margin_hon"
                android:layout_height="@dimen/login_edit_height"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_background_logorreg"
                >
                <EditText
                    android:id="@+id/edit_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入授权码"
                    android:textColorHint="#8395A7"
                    android:layout_marginLeft="16sp"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    />
            </RelativeLayout>
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/login_edit_margin_hon"
                android:layout_height="@dimen/login_edit_height"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape_background_logorreg_btn"
                android:text="登录"
                android:textSize="17sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>