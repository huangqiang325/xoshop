<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_out"
    android:layout_width="wrap_content"
    android:layout_height="140dp"
    android:background="@color/white"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
 >

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:background="@drawable/shape_background_5_gray">

        <FrameLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            >

            <ImageView
                android:id="@+id/imageview_top"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_gravity="top"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/textview_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"
                android:textSize="8sp"
                android:paddingHorizontal="4dp"
                android:background="@drawable/gradient_up2mid2down"
             />
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp">
            <TextView
                android:id="@+id/textview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_centerHorizontal="true"
                android:maxLines="2"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="#ff605d57"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/textview_form_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="6dp"
                android:textColor="#ff605d57"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/textview_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="6dp"
                android:textColor="#ffff5a5a"
                android:textSize="9sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>